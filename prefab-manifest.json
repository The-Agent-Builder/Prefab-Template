{
  "schema_version": "1.0",
  "id": "hello-world-prefab",
  "version": "0.0.6",
  "entry_point": "src/main.py",
  "dependencies_file": "pyproject.toml",
  "functions": [
    {
      "name": "analyze_dataset",
      "description": "分析数据集并返回统计结果",
      "parameters": [
        {
          "name": "data",
          "type": "list",
          "description": "数字列表",
          "required": true
        },
        {
          "name": "operation",
          "type": "str",
          "description": "操作类型：'statistics'(完整统计), 'sum'(求和), 'average'(平均值)",
          "required": false,
          "default": "statistics"
        }
      ],
      "returns": {
        "type": "object",
        "description": "返回结果对象",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "操作是否成功"
          },
          "data": {
            "type": "object",
            "description": "成功时的结果数据（仅在 success=true 时存在）",
            "optional": true,
            "properties": {
              "operation": {
                "type": "string",
                "description": "执行的操作类型"
              },
              "value": {
                "type": "number",
                "description": "计算结果值（sum 或 average 操作）",
                "optional": true
              },
              "count": {
                "type": "integer",
                "description": "数据点数量",
                "optional": true
              },
              "statistics": {
                "type": "object",
                "description": "统计信息（statistics 操作，使用 numpy 计算）",
                "optional": true,
                "properties": {
                  "count": {
                    "type": "integer",
                    "description": "数据点数量"
                  },
                  "sum": {
                    "type": "number",
                    "description": "总和"
                  },
                  "average": {
                    "type": "number",
                    "description": "平均值"
                  },
                  "max": {
                    "type": "number",
                    "description": "最大值"
                  },
                  "min": {
                    "type": "number",
                    "description": "最小值"
                  },
                  "std": {
                    "type": "number",
                    "description": "标准差"
                  },
                  "variance": {
                    "type": "number",
                    "description": "方差"
                  }
                }
              }
            }
          },
          "error": {
            "type": "string",
            "description": "错误信息（仅在 success=false 时存在）",
            "optional": true
          },
          "error_code": {
            "type": "string",
            "description": "错误代码（仅在 success=false 时存在）",
            "optional": true,
            "enum": [
              "EMPTY_DATA",
              "INVALID_OPERATION",
              "UNEXPECTED_ERROR"
            ]
          }
        }
      }
    },
    {
      "name": "video_to_audio",
      "description": "将视频文件转换为音频文件",
      "parameters": [
        {
          "name": "video_path",
          "type": "str",
          "description": "输入视频文件路径",
          "required": true
        },
        {
          "name": "output_path",
          "type": "str",
          "description": "输出音频文件路径（默认为视频同目录下的同名音频文件）",
          "required": false,
          "default": null
        },
        {
          "name": "audio_format",
          "type": "str",
          "description": "音频格式：'mp3', 'wav', 'aac', 'flac', 'ogg'",
          "required": false,
          "default": "mp3"
        }
      ],
      "returns": {
        "type": "object",
        "description": "返回转换结果对象",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "操作是否成功"
          },
          "data": {
            "type": "object",
            "description": "成功时的转换结果数据",
            "optional": true,
            "properties": {
              "input_file": {
                "type": "string",
                "description": "输入视频文件路径"
              },
              "output_file": {
                "type": "string",
                "description": "输出音频文件路径"
              },
              "format": {
                "type": "string",
                "description": "输出音频格式"
              },
              "duration": {
                "type": "number",
                "description": "音频时长（秒）"
              },
              "sample_rate": {
                "type": "number",
                "description": "音频采样率"
              }
            }
          },
          "error": {
            "type": "string",
            "description": "错误信息（仅在 success=false 时存在）",
            "optional": true
          },
          "error_code": {
            "type": "string",
            "description": "错误代码（仅在 success=false 时存在）",
            "optional": true,
            "enum": [
              "FILE_NOT_FOUND",
              "INVALID_FORMAT",
              "NO_AUDIO_TRACK",
              "DEPENDENCY_MISSING",
              "CONVERSION_FAILED"
            ]
          },
          "supported_formats": {
            "type": "array",
            "description": "支持的音频格式列表（仅在 error_code=INVALID_FORMAT 时存在）",
            "optional": true
          }
        }
      }
    }
  ]
}
